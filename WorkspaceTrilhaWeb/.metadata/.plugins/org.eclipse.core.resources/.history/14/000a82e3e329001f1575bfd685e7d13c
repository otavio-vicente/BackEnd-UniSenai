<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Servlets</title>
<link href="./style.css" rel="stylesheet" type="text/css">
<script>

	function validaContato(){
		if(document.frmcontato.nometxt.value==""){
		    alert("Preencha o campo Nome.");
		    document.frmcontato.nometxt.focus();
		    return false;
		} else if(document.frmcontato.enderecotxt.value==""){
		    alert("Preencha o campo Endereço.");
		    document.frmcontato.enderecotxt.focus();
		    return false;
		} else if(document.frmcontato.fonetxt.value==""){
		    alert("Preencha o campo Telefone.");
		    document.frmcontato.fonetxt.focus();
		    return false;
		}
		return true; 
	}



</script>
</head>
<body>
	<form name="frmcontato" method="post" action="#" onsubmit="return validaContato()">
		<fieldset>
			<legend>Contato</legend>
			<table>
				<tr>
					<td><label>Nome:</label></td>
					<td><input type="text" name="nometxt"></input></td>
				</tr>
				<tr>
					<td><label>Endereço:</label></td>
					<td><input type="text" name="enderecotxt"></input></td>
				</tr>
				<tr>
					<td><label>Telefone:</label></td>
					<td><input type="text" name="fonetxt" placeholder="Ex: (xx)xxxxx-xxxx"></input></td>
				</tr>
				<tr>
					<td><input type="submit"></input></td>
					<td><input type="reset" value="Limpar"></input></td>
				</tr>	
			</table>
		</fieldset>
	</form>
</body>

</html>